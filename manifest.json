{
  "manifest_version": 3,
  "name": "Print Selected Text",
  "version": "1.0",
  "background": { "service_worker": "background.js" },
  "host_permissions": ["<all_urls>"],
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/reading_16.png",
    "48": "images/reading_48.png",
    "128": "images/reading_128.png"
  }
}
